
# Ensure unique PATH entries
typeset -U path PATH

# Root Directory Guard
# Prevents running shells from root to avoid cluttering the system root
if [[ "$PWD" == "/" ]]; then
  echo "Warning: Shell started in root. Switching to home directory."
  cd ~
fi

test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

# The following lines have been added by Docker Desktop to enable Docker CLI completions.
fpath=(/Users/4jp/.docker/completions $fpath)
autoload -Uz compinit
compinit
# End of Docker CLI completions

# Homebrew
export PATH="/opt/homebrew/bin:/opt/homebrew/sbin:$PATH"
export PATH="/opt/homebrew/opt/file-formula/bin:$PATH"

# Ruby (Homebrew)
export PATH="/opt/homebrew/opt/ruby/bin:/opt/homebrew/lib/ruby/gems/3.4.0/bin:$PATH"
export LDFLAGS="-L/opt/homebrew/opt/ruby/lib"
export CPPFLAGS="-I/opt/homebrew/opt/ruby/include"
export PKG_CONFIG_PATH="/opt/homebrew/opt/ruby/lib/pkgconfig"

# Go
export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin

# Toolchains (External Volume)
export PATH=$PATH:/Volumes/4444-iivii/ivi374forivi3ivi3/toolchains/bin

# Gemini CLI Configuration
export GEMINI_CLI=1
if [ -f "$HOME/.config/op/secrets.zsh" ]; then
  source "$HOME/.config/op/secrets.zsh"
fi

# The next line updates PATH for the Google Cloud SDK.
if [ -f '/Users/4jp/google-cloud-sdk/path.zsh.inc' ]; then . '/Users/4jp/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/Users/4jp/google-cloud-sdk/completion.zsh.inc' ]; then . '/Users/4jp/google-cloud-sdk/completion.zsh.inc'; fi

# Created by `pipx` on 2025-12-28 17:35:24
export PATH="$PATH:/Users/4jp/.local/bin"
export PATH="$HOME/.local/bin:$PATH"
